{
  "name": "sync-poc",
  "version": "0.0.1",
  "description": "Library for sharing and recording user browser sessions.",
  "author": "Mateusz Krzeszowiak <mateusz.krzeszowiak@gmail.com",
  "license": "MIT",
  "scripts": {
    "build": "microbundle src/sender/sender.js -o dist/sender.js && microbundle src/reciever/reciever.ts -o dist/reciever.js",
    "dev": "microbundle -w"
  },
  "files": [
    "src",
    "dist"
  ],
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/polyfill": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "eslint": "^5.15.3",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^2.2.0",
    "jasmine-core": "^3.3.0",
    "karma": "^4.0.1",
    "karma-babel-preprocessor": "^8.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-edge-launcher": "^0.4.2",
    "karma-firefox-launcher": "^1.1.0",
    "karma-ie-launcher": "^1.0.0",
    "karma-jasmine": "^2.0.1",
    "lint-staged": "^8.1.5",
    "microbundle": "^0.11.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4"
  },
  "mangle": {
    "regex": "_$"
  },
  "lint-staged": {
    "*.json": [
      "prettier",
      "git add"
    ],
    "*.js": [
      "prettier",
      "eslint",
      "git add"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "jasmine": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "prettier",
      "plugin:prettier/recommended"
    ]
  },
  "eslintIgnore": [
    "dist/**/*.js",
    "karma.conf.js"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "diff-match-patch": "^1.0.4",
    "ws": "^7.0.0"
  }
}
